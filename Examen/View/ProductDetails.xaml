<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.View.ProductDetails"
             Title="Add New Product"
             BackgroundColor="#d5def5">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Name" TextColor="Black" FontSize="18"
                  x:Name="nameEntry"
                  PlaceholderColor="Black"/>
            <Entry Placeholder="Price" TextColor="Black" FontSize="18"
                  x:Name="priceEntry"
                   PlaceholderColor="Black"/>
            <Entry Placeholder="Description" TextColor="Black" FontSize="18"
                  x:Name="desEntry"
                   PlaceholderColor="Black"/>
            <Button Text="Add" TextColor="White" Clicked="ProDetails"
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center"  
                    BackgroundColor="#430f58"
                    BorderColor="#8594e4"
                    BorderWidth="1.5"
                    CornerRadius="50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>